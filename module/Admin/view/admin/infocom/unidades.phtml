            $("#cancelarmodal").css('display',"none");                                       
            setTimeout(function(){             
             $('#importarconfirm').modal('hide');             
            }, 3000); 	 
          }else
          {
            $("#text").text(response.descripcion);
            $("#iconmodal").attr('class',"fa fa-close fa-3x"); 
          }
		}
	}); 
}else{  
$('#aceptaimportar').click(function(){importame(1,from);});
$('#importarconfirm').modal('show');       
} 
