	    url : '<?php echo $this->basePath()."/admin/infocom/importar"?>',
		data : data,
        cache: false,
        contentType: false,
        processData: false,
        type: 'POST',   
		success : function(response) {					                     
          if(response.status = 'ok'){
            $("#text").text(response.descripcion);
