        $("#listacuota").append('<tr><td  style="text-align: center;">Cuota '+(i+1)+'</td><td  id="f'+i+'"style="text-align: center;">$ '+(Math.floor(valor)+"").replace(/\B(?=(\d{3})+(?!\d))/g, ".")+'</td></tr>')
