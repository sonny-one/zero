function calculaCuota(){
   $("#listacuota").find("tr:gt(0)").remove();
   $("#montocuota").attr("disabled","disabled");
   var cuotas =  $("#cuotas option:selected" ).text()
   var monto  =  $("#montocuota").val().replace(/\./g,'')
